<div class="row">
<h4><u>Search Patterns</u></h2>
</div>

<div class="row">
<%= form_tag ravelries_path, :method => "get" do %>
  <%= label_tag(:search, "Search Pattern by Name:") %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag("Search", :pattern_name => nil) %>
<% end %>
</div>

<div class="row">
  <%= @patterns.each do |r| %>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title"><%= r.pattern_name %></h3>
          <p class="card-text">Ravelry Link: ravelry.com/<%=  r.web_link %></p>
          <img src=<%= r.picture %> >
        </div>
      </div>
    </div>
  <% end %>
</div>








